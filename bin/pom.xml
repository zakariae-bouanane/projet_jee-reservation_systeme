<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>ehei.mini_projet</groupId>
  <artifactId>gestion_reservation</artifactId>
  <packaging>war</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>gestion_reservation Maven Webapp</name>
  <url>http://maven.apache.org</url>

  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>

    <dependency>
      <groupId>jakarta.servlet</groupId>
      <artifactId>jakarta.servlet-api</artifactId>
      <version>5.0.0</version> <!-- Ou la derniÃ¨re version stable -->
      <scope>provided</scope>
    </dependency>
  </dependencies>

  <build>
    <finalName>gestion_reservation</finalName>
    <plugins>
      <!-- Utilisation de Cargo Maven Plugin -->
      <plugin>
        <groupId>org.codehaus.cargo</groupId>
        <artifactId>cargo-maven2-plugin</artifactId>
        <version>1.9.7</version>
        <configuration>
          <container>
            <containerId>tomcat10x</containerId>
            <type>installed</type>
            <home>C:\Program Files (x86)\Apache Software Foundation\Tomcat 10.1</home> <!-- Remplacez par le chemin de votre installation Tomcat -->
          </container>
          <properties>
            <cargo.servlet.port>8383</cargo.servlet.port>
          </properties>
          <deployables>
            <deployable>
              <groupId>ehei.mini_projet</groupId>
              <artifactId>gestion_reservation</artifactId>
              <type>war</type>
            </deployable>
          </deployables>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
